{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build shader system (Linux)",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-w",
                "-g",
                "-ggdb",
                "-lGLEW",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-o",
                "bin/debug/shader-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release build shader system (Linux)",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-w",
                "-lGLEW",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-o",
                "bin/release/shader-system"
            ]
        },
        {
            "label": "debug build shader system (Windows)",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "main.cpp",
                "-w",
                "-g",
                "-ggdb",
                "-LD:\\development\\glew-2.1.0\\lib\\Release\\Win32",
                "-LD:\\development\\freeglut\\lib",
                "-lglew32",
                "-lfreeglut",
                "-lopengl32",
                "-ID:\\development\\glew-2.1.0\\include",
                "-ID:\\development\\freeglut\\include",
                "-static-libgcc",
                "-static-libstdc++",
                "-o",
                "bin\\debug\\shader-system.exe"
            ],        
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }   
    ]
}