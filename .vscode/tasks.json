{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build shader system",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-w",
                "-g",
                "-ggdb",
                "-lGLEW",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-o",
                "bin/debug/shader-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release build shader system",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-w",
                "-lGLEW",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-o",
                "bin/release/shader-system"
            ]
        }
    ]
}