    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build shader system (Linux)",
            "type": "shell",
            "command": "g++",
            "args": [
                "libs/rocket/device.c",
                "libs/rocket/track.c", 
                "libs/rocket/loadsave.c",       
                "libs/jsoncpp.cpp",
                "libs/lodepng.cpp",
                "src/Cosmonaut.cpp",
                "src/Configuration.cpp",
                "src/Music.cpp",
                "src/Logger.cpp",
                "src/Resource.cpp",
                "src/Texture.cpp",
                "src/StaticTexture.cpp",
                "src/DynamicTexture.cpp",
                "src/ResourceManager.cpp",
                "src/Shader.cpp",
                "main.cpp",
                "-w",
                "-g",
                "-ggdb",
                "-L${workspaceFolder}/libs",
                "-L${workspaceFolder}/include",
                "-L/home/helgrima/Development/bass24/x64",
                "-lGLEW",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-lbass",
                "-I${workspaceFolder}/libs/json",
                "-I${workspaceFolder}/include",
                "-I/home/helgrima/Development/bass24",
                "-I/home/helgrima//Development/rocket/lib",
                "-fpermissive",
                "-o",
                "bin/debug/shader-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
