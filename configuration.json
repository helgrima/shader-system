{
    "demo": {
        "release": false,
        "name": "demo",
        "group": "demogroup",
        "icon":  "assets\\pics\\tt.png"
    },
    "screen": {
        "width": 640,
        "height": 480,
        "FPS": 60
    },
    "music": {
        "file": "assets\\music\\demo-release.mp3",
        "BPM": 120.0,
        "frequency": 44000
    },
    "sync": {
        "RPB": 8,
        "host": "localhost"
    },
    "shaders": {
        "vertex": "shaders\\vertex.glsl",
        "fragment": "shaders\\fragment.glsl",
        "majorVersion": 3,
        "minorVersion": 3,
        "uniforms": [
            {
                "variable": "time",
                "track": "time"
            },
            {
                "variable": "resolution",
                "track": "resolution"
            },
            {
                "variable": "baseColor",
                "track": "scene1.color"
            }
        ]
    },
    "assets": [
        {
            "type": "staticTexture",
            "name": "texture01",
            "file": "assets\\textures\\texture01.png"
        },
        {
            "type": "staticTexture",
            "name": "texture02",
            "file": "assets\\textures\\texture02.png"
        },
        {
            "type": "dynamicTexture",
            "name": "dynamicTexture01",
            "file": "assets\\dynamicTextures\\texture01.frag",
            "once": true,
            "width": 512,
            "height": 512,
            "variables": ["time"]
        },
        {
            "type": "dynamicTexture",
            "name": "dynamicTexture02",
            "file": "assets\\dynamicTextures\\texture02.frag",
            "once": false,
            "width": 256,
            "height": 256,
            "variables": ["time"]
        }
    ],
    "tracks": [
        {
            "type": "float3",
            "track": "scene1.color"
        }
    ]
}